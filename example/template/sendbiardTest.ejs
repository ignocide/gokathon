<div class="reportBox" ng-init="getList()" class='fill'>

  <div class="contain">
      <div class="col-md-4">
        <p>channel list</p>
        <div ng-repeat="i in list" >
          <div ng-click="toChat(i)">{{i.channel.name}}</div>
        </div>
      </div>
      <div class="col-md-8 fill messageRoom">
        <div class="mesasgeRoom-header">
          <p>channel</p>
        </div>
        <div class="dialogs-wapper">

          <div class="dialogs">
            <div class="msgItem" ng-class="isMe($index)" ng-repeat="dialog in dialogs">
              <div class="msgRow">
                <a class="DateLine">{{dialog.sts | date:'medium'}}</a>
              </div>
              <div class="msgRow" ng-if="nickOnce($index)">
                <img class="msgThumb" ng-src="{{imgUrl(dialog.user.guest_id)}}">
                <a class="msgNick">{{dialog.user.name}}</a>
              </div>
              <div class="msgRow">
                <a class="msgContent">{{dialog.message}}</a>
              </div>
              <div class="msgRow">
                <a class="msgTime">{{dialog.sts | date:'medium'}}</a>
              </div>
            </div>
          </div>
        </div>
        <div class="msgInput row">
          <textarea class="col-md-8 msgText" ng-model="sendText" type="text"></textarea>
          <button type="submit" class="btn btn-default col-md-4 msgBtn" ng-click="sendMessage()">보내기</button>
        </div>
      </div>


  </div>
</div>