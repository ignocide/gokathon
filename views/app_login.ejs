<body>

<div id="wrapper" ng-controller="signupCtrl" class="loginForm">

    <!-- Navigation -->
    <nav class="navbar" role="navigation" style="margin-bottom: 0" ng-controller="navCtrl">
        <div class="navbar-header">
            {{formInfo.title}}
        </div>
        <!-- /.navbar-static-side -->
    </nav>



    <div class="form-warpper">
        <div class="signup" ng-if="!formInfo.isLogin">
            <div>
                <div style="text-align: center; margin-bottom: 15px">
                    <img ng-src="/images/add_user_pic.png" width="100" height="100" style="margin : 0 auto"/>
                </div>
                <div class="container-fluid">
                    <form>
                        <fieldset class="input-group-vertical">
                            <div class="form-group">
                                <label class="sr-only">아이디</label>
                                <input type="text" class="form-control" ng-model="signup.userid" placeholder="아이디">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">닉네임</label>
                                <input type="text" class="form-control" ng-model="signup.nickname" placeholder="닉네임">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">비밀번호</label>
                                <input type="password" class="form-control" ng-model="signup.pw" placeholder="비밀번호">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">이메일</label>
                                <input type="email" class="form-control" ng-model="signup.email" placeholder="이메일">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">cm</label>
                                <input type="text" class="form-control" ng-model="signup.height" placeholder="키">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">kg</label>
                                <input type="text" class="form-control" ng-model="signup.weight" placeholder="몸무게">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">나이</label>
                                <input type="text" class="form-control" ng-model="signup.age" placeholder="나이">
                            </div>
                        </fieldset>
                        <button class="btn btn-primary sign_in_btn" ng-click="signupProc()">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="login" ng-if="formInfo.isLogin">
            <div>
                <div style="text-align: center; margin-bottom: 15px">
                    <img ng-src="/images/logo_full_red.png" style="width: 165px; margin-bottom: 22px;"/>
                </div>
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-user" ></span></span>
                    <input type="text" class="form-control" placeholder="아이디" ng-model="loginInfo.userid"/>
                </div>
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-ok-sign" ></span></span>
                    <input type="password" class="form-control" placeholder="비밀번호" ng-model="loginInfo.pw">
                </div>
                <button type="button" class="btn btn-default navbar-btn login-btn" ng-click="login()">로그인 </button>
            </div>
        </div>
    </div>
    <!-- /#page-wrapper -->
    <footer class="footer btnFooter">
        <div class="login_sign_in" ng-click="toggleForm()" style="width: 100%; height: 100%;">
            {{formInfo.foot}}
        </div>
    </footer>

</div>



<!-- /#wrapper -->


</body>

</html>
